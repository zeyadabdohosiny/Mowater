<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.TestDrive.TestDriveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="@color/mowater_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="10">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="الاسم"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/base_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_special_number_reservation_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:shadowColor="@color/base_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/base_color" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="الرقم الشخصي"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/base_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_special_number_reservation_id_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:shadowColor="@color/base_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/base_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="الهاتف"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/base_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_special_number_reservation_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:shadowColor="@color/base_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/base_color" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:hint="العنوان"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/base_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_special_number_reservation_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:shadowColor="@color/base_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/base_color" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="10">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_test_Drive_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/style_edittext"
                    android:padding="5dp"
                    android:text="@string/choose_day"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/base_color" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_available_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:padding="2dp"
                    android:visibility="visible"/>

                <ProgressBar
                    android:id="@+id/progress_bar_available_times"
                    android:layout_width="wrap_content"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:indeterminateTint="@color/mowater_color"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:weightSum="4">
            <!--            llIdCard -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="7">


                <TextView
                    android:id="@+id/tv_reservation_back_id_card"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/tv_reservation_id_license"
                    android:gravity="center"
                    android:text="خلفي"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reservation_fron_id_card"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/tv_reservation_id_license"
                    android:gravity="center"
                    android:text="امامي"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="البطاقه"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--llDrivingLicense -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="7">


                <TextView
                    android:id="@+id/tv_reservation_back_driving_license"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/tv_reservation_id_license"
                    android:gravity="center"
                    android:text="خلفي"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reservation_front_driving_license"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/tv_reservation_id_license"
                    android:gravity="center"
                    android:text="امامي"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="الرخصه"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="4">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_vehicle_reserve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/corner_shape"
                    android:backgroundTint="@color/mowater_color"
                    android:text="@string/test_drive"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progess_bar_reservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:indeterminateTint="@color/mowater_color"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>