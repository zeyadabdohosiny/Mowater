<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="35dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="horizontal"
        android:background="#EAE5E5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_rental_office_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:src="@drawable/car_logo"
            android:background="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_margin="1dp">
        <TextView
            android:id="@+id/tv_dynamic_rental_office_yearly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="سنوي"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
        <TextView
            android:id="@+id/tv_rental_office_yearly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 دينار"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_margin="1dp">
        <TextView
            android:id="@+id/tv_dynamic_rental_office_monthly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شهري"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
        <TextView
            android:id="@+id/tv_rental_office_monthly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شامل"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_margin="1dp">
        <TextView
            android:id="@+id/tv_dynamic_rental_office_weekly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="اسبوعي"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
        <TextView
            android:id="@+id/tv_rental_office_weekly_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شامل"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/white"
        android:layout_margin="1dp">
        <TextView
            android:id="@+id/tv_dynamic_rental_office_daily_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="يومي"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />
        <TextView
            android:id="@+id/tv_rental_office_daily_price_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شامل"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="3dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/scrollbar_thumb_color_dark"
        android:layout_margin="1dp">
        <TextView
            android:id="@+id/tv_dynamic_rental_office_name_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شامل"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_rental_office_name_item"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="شامل"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>